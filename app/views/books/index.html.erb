<!DOCTYPE html>
<html>
<body>

 <h1>Books</h1>

<%= form_for(@book) do |f| %>

<%= render 'layouts/error_messages', model: f.object %>

<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Show" ,book_path(book.id)%></td>
     <td><%= link_to "Edit" ,edit_book_path(book.id) %></td>
     <td><%= link_to "Destoroy", book_path(book.id), method: :delete %>
</td>
</tr>
     <% end %>
</table>


 <h1>New book</h1>


 <h4>Title</h4>
  <%= f.text_field :title %>

 <h4>Body</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>

<% end %>

</body>
</html>